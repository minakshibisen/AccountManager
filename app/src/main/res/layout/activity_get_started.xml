<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GetStartedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_round_background">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_35sdp"
            android:src="@drawable/img_account" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_15sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's"
            android:fontFamily="@font/hero_regular"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_25sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage"
            android:fontFamily="@font/hero_regular"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_25sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money"
                android:fontFamily="@font/hero_regular"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hero_regular"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:text="With us"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_25sdp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_get_started"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginVertical="@dimen/_25sdp"
        android:background="@drawable/custom_btn_background"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Get Started"
        android:textStyle="bold"
        android:fontFamily="@font/hero_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>