<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_gradiant_background"
    android:orientation="vertical"
    tools:context=".activity.SignUpActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/signup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_round_bg"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/card_signup"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_10sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="SignUp"
                android:textColor="@color/black"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="First Name"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/layout_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/round_border_bg"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_account_circle_24"
                    app:tint="@color/black" />


                <EditText
                    android:id="@+id/edt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/img_user"
                    android:background="@null"
                    android:drawablePadding="@dimen/_15sdp"
                    android:hint="asdf asdf"
                    android:inputType="text"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="Last Name"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/layout_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/round_border_bg"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/last_user"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_account_circle_24"
                    app:tint="@color/black" />


                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/last_user"
                    android:background="@null"
                    android:drawablePadding="@dimen/_15sdp"
                    android:hint="asdf asdf"
                    android:inputType="text"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="@string/phone"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/layout_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/round_border_bg"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/img_country"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_phone" />


                <EditText
                    android:id="@+id/edt_mobile_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/img_country"
                    android:background="@null"
                    android:drawablePadding="@dimen/_15sdp"
                    android:hint="@string/_0987654321"
                    android:inputType="number"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="@string/password"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/round_border_bg"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/img_password"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/password" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/img_password"
                    android:background="@null"
                    android:drawablePadding="@dimen/_15sdp"
                    android:importantForAutofill="auto"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/view" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="Confirm Password"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/layout_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/round_border_bg"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/img_confirm_password"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/password" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_toEndOf="@id/img_confirm_password"
                    android:background="@null"
                    android:drawablePadding="@dimen/_15sdp"
                    android:importantForAutofill="auto"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/view" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_signup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_above="@id/footer_layout"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:backgroundTint="@color/color_primary"
            app:cardCornerRadius="@dimen/_20sdp">

            <TextView
                android:id="@+id/text_login"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn_background"
                android:fontFamily="@font/hero_regular"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="SignUp"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="Already have any account?"
                android:textColor="@color/black"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/text_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:drawablePadding="@dimen/_15sdp"
                android:fontFamily="@font/hero_bold"
                android:text="@string/signin"
                android:textColor="@color/color_primary"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>